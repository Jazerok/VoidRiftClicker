[gd_scene load_steps=2 format=3 uid="uid://space_background_scene"]

[sub_resource type="GDScript" id="bg_script"]
script/source = "extends ParallaxBackground

# SpaceBackground.gd - Animated parallax space background
# Creates a sense of depth with multiple scrolling layers

@export var scroll_speed: float = 10.0
@export var auto_scroll: bool = true

func _process(delta):
	if auto_scroll:
		# Slowly scroll the background for ambient movement
		scroll_offset.x -= scroll_speed * delta
		scroll_offset.y -= scroll_speed * 0.5 * delta
"

